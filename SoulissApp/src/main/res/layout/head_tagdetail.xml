<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/photo"
        android:layout_width="match_parent"
        tools:src="@drawable/side1"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:transitionName="photo_hero" />

    <TextView
        android:textColor="@color/white_bitaplha"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:id="@+id/tagTextView"
        android:shadowRadius="12"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Title Big Swallow"/>

    <ImageView
        android:id="@+id/star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:alpha="1.0"
        android:layout_gravity="bottom|start"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:alpha="0.0"
        android:elevation="4dp"
        android:src="@android:drawable/star_big_on" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fabTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fab:fab_type="mini"
        android:alpha="0.0"
        tools:alpha="1.0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/ic_add_white_24dp"
        fab:fab_colorNormal="@color/std_green"
        fab:fab_colorPressed="@color/std_blue_shadow"
        fab:fab_colorRipple="@color/std_purple"
        android:layout_gravity="right|bottom" />
</FrameLayout>