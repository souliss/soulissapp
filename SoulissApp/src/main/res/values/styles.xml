<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="LightThemeSelector" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listViewStyle">@style/lightListView</item>
    </style>

    <style name="AboutDialogLight" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="AboutDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#ffCCCCCC</item>
    </style>

    <style name="lightListView">
        <item name="android:background">#00ffffff</item>
    </style>

    <style name="DarkThemeSelector" parent="Theme.AppCompat.NoActionBar">
        <item name="android:listViewStyle">@style/darkListView</item>
    </style>

    <style name="darkListView">
        <item name="android:background">#00000000</item>
    </style>

    <style name="CodeFontSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <!-- <item name="android:typeface">monospace</item> -->
    </style>

    <style name="CodeFontMain" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <!-- <item name="android:typeface">monospace</item> -->
    </style>

    <style name="CodeFontTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:shadowColor">#aaaaff</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <!-- <item name="android:typeface">monospace</item> -->

    </style>

    <style name="CodeFontTitleBig" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/text_size_vbig</item>
        <!-- <item name="android:typeface">monospace</item> -->

    </style>

    <style name="CodeFontActionBar" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="ButtonText">
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton"/>

    <style name="mySpinnerStyle">
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="FilePickerAlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/std_blue</item>
        <item name="colorPrimaryDark">@color/std_blue_shadow</item>
        <item name="colorAccent">@color/aa_green</item>
    </style>

</resources>