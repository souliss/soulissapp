<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LightThemeSelector" parent="Theme.Sherlock.Light">
        <item name="android:windowBackground">@drawable/radialbacklight</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
   

    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBar.TitleTextStyle</item>
    </style>

    <style name="MyActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="DarkThemeSelector" parent="Theme.Sherlock">
        <item name="android:windowBackground">@drawable/radialback</item>
        <item name="android:actionBarStyle">@style/MyActionBarDark</item>
    </style>

    <style name="MyActionBarDark" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarDark.TitleTextStyle</item>
    </style>

    <style name="MyActionBarDark.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>
    
     <style name="CodeFontSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <!-- <item name="android:typeface">monospace</item> -->
    </style>

    <style name="CodeFontMain" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <!-- <item name="android:typeface">monospace</item> -->
    </style>

    <style name="CodeFontTitle" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:shadowColor">#aaaaff</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">italic</item>
    </style>
    
     <style name="CodeFontTitleBig" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_vbig</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>
    
     <style name="CodeFontActionBar" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_big</item>
<!--         <item name="android:fontFamily">sans-serif-condensed</item> -->
    </style>

</resources>